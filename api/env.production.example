# 生产环境配置示例
NODE_ENV=production
PORT=3000

# 服务器配置
HOST=0.0.0.0
FRONTEND_URL=https://your-domain.com

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt,.zip,.rar,.7z

# 安全配置
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT=5
VERIFY_RATE_LIMIT=10
DOWNLOAD_RATE_LIMIT=20

# 文件清理配置
CLEANUP_INTERVAL=24
FILE_RETENTION_HOURS=168
TEMP_FILE_CLEANUP_HOURS=1

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# 数据库配置（如果使用数据库）
# DATABASE_URL=postgresql://username:password@localhost:5432/filesystem
# REDIS_URL=redis://localhost:6379

# 邮件配置（用于通知）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# 监控配置
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups
